<div class="container mt-5">
  <h1>Longest Word Game</h1>
  <h2>Your Random Letters</h2>
  <div class="alert alert-info mb-4">
    <%= @letters.join(" ") %>
  </div>

  <form action="/score" method="post" data-turbo="false" class="form-group">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="hidden" name="letters" value="<%= @letters.join(' ') %>">
    <label>Type a word:</label>
    <input type="text" name="word" class="form-control mb-3">
    <input type="submit" value="Check" class="btn btn-primary">
  </form>
</div>
